{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/renderer/patchs/**/*.js",
    "src/renderer/src/**/*.ts",
    "src/renderer/src/**/*.tsx",
    "src/renderer/src/**/*.vue",
    "src/renderer/auto-imports.d.ts",
    "src/renderer/components.d.ts",
    "src/preload/index.d.ts",
    "src/tests/mount.ts",
    "packages/**/*.ts"
  ],

  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": [
      "vue/jsx",
      "element-plus/global",
      "unplugin-icons/types/vue",
      "@toolmain/shared",
      "@toolmain/libs",
    ],
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      // "@/*": ["src/*"],
      "@renderer/*": ["src/renderer/src/*"],
      "@windflow/core/*": ["packages/core/src/*"],
      "@windflow/markdown": ["packages/markdown/src/index.ts"],
      "@windflow/shared": ["packages/shared/src/index.ts"]
    }
  }
}
