{
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node","electron-vite/node", "vite/client","@toolmain/shared"],
    "strictNullChecks": true,
    "allowImportingTsExtensions":false,
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
