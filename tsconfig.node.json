{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/tests/setup-node.ts",
    "packages/shared/**/*.ts",
    "scripts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowImportingTsExtensions": false,
    "types": [
      "node",
      "electron-vite/node",
      "vite/client",
      "@toolmain/shared"
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@windflow/shared": ["packages/shared/src/index.ts"]
    }
  }
}
