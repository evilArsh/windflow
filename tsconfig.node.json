{
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/*.ts", "src/shared/types/bridge.ts", "src/shared/types/mcp.ts", "src/shared/types/service.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node","electron-vite/node", "vite/client"],
    "strictNullChecks": true,
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@preload/*": ["src/preload/*"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
